/* Sesseragi 2015 */

body {
	background-color: #eee;
	/*background-color: #f1f1f1;*/
	font-size: 1em;
	font-family: Garamond, Georgia, "Times New Roman", Times, serif;
	margin: 0;
	padding: 0;
	border: 0;
}

.float_left{float:left}
.float_right{float:right}
.clearfix:before,.clearfix:after{content:"\0020";display:block;height:0;overflow:hidden}
.clearfix:after{clear:both}
.clearfix{zoom:1}
.clear{clear:both;display:block;visibility:hidden;height:0;font-size:0}

.wide-one-column {
	min-width: 768px;
	background: transparent url(http://brandymorecastle.org/themes/seseragi/img/page_background_gray.png);
	background-repeat: repeat-x;
	background-position: top;
	padding-bottom: 0;
	padding-top: 3.3em;
	padding-left: 1em;
	padding-right: 1em;
}

.columns {
	float: left;
	width: 46.1%;
	/* gradient background */
	background: transparent url(http://brandymorecastle.org/themes/seseragi/img/page_background_gray.png);
	background-repeat: repeat-x;
	background-position: top;
	padding-left: 1em;
	padding-right: 1em;
	padding-top: 1em;
	padding-bottom: 3em;
	border: 0px solid #999;
	margin-left: 8px;
	margin-right: 8px;
}

.flow {
	width: auto;
	padding-top: 0em;
	padding-left: 1em;
	padding-right: 1em;
	padding-bottom: 1.3em;
}

.col1x, .col2x {
    width: 2em;
	float: left;
	width: 40%;
	/* gradient background */
	background: transparent url(http://brandymorecastle.org/themes/seseragi/img/page_background_gray.png);
	background-repeat: repeat-x;
	background-position: top;
	padding-left: 1em;
	padding-right: 1em;
	padding-top: 1em;
	padding-bottom: 3em;
	border: 0px solid #999;
}




